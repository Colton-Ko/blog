---
interface Props {
  title: string;
}

const { title } = Astro.props;
import Header from "../components/Header.astro";
import SearchModal from "../components/SearchModal.astro";
import CodeBlockHandler from "../components/CodeBlockHandler.astro";
import MathBlockHandler from "../components/MathBlockHandler.astro";
import MermaidBlockHandler from "../components/MermaidBlockHandler.astro";
import DocumentClickHandler from "../components/DocumentClickHandler.astro";
import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Blog" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Resource hints for performance -->
    <link rel="preconnect" href="https://cdn.jsdelivr.net" />
    <link rel="preconnect" href="https://cdn.skypack.dev" />
    <link rel="preconnect" href="https://www.desmos.com" />

    <!-- Preload critical CSS -->
    <link
      rel="preload"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css"
      as="style"
      crossorigin="anonymous"
      integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV"
    />

    <!-- KaTeX CSS for math rendering -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css"
      integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV"
      crossorigin="anonymous"
    />

    <!-- Custom CSS for sans-serif math (fallback) -->
    <style is:global>
      /* Force KaTeX to use sans-serif fonts (mimics LaTeX sansmath package) */
      .katex {
        font-family: "Computer Modern Sans", "Helvetica Neue", Helvetica, Arial,
          sans-serif !important;
      }

      /* Optimize font loading - prevent flash of invisible text */
      @font-face {
        font-display: swap;
      }

      /* Performance: Skip rendering off-screen content */
      /* Only apply to non-interactive collapsed state */
      .katex-display:not(.math-block-wrapper .katex-display),
      .mermaid-container,
      .desmos-container {
        content-visibility: auto;
        contain-intrinsic-size: 1px 300px; /* Estimate height to prevent scrollbar jumping */
      }

      /* Variables should be italic (mathnormal, mathit) */
      .katex .mathnormal,
      .katex .mathit {
        font-family: "Computer Modern Sans", "Helvetica Neue", Arial, sans-serif !important;
        font-style: italic !important;
      }

      /* Roman/upright text should be normal (mathrm) */
      .katex .mathrm {
        font-family: "Computer Modern Sans", "Helvetica Neue", Arial, sans-serif !important;
        font-style: normal !important;
      }
    </style>

    <!-- Highlight.js CSS for code syntax highlighting -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/highlight.js@11.9.0/styles/github.min.css"
    />

    <title>{title}</title>

    <ClientRouter />

    <style>
      :root {
        --accent: #2563eb;
        --accent-light: #3b82f6;
        --accent-dark: #1e40af;
        --gray: #6b7280;
        --gray-light: #f3f4f6;
        --gray-dark: #1f2937;
      }

      * {
        box-sizing: border-box;
      }

      html {
        font-family: system-ui, sans-serif;
        background: #ffffff;
        color: #1f2937;
      }

      body {
        margin: 0;
        padding: 0; /* Remove padding from body to allow full-width header */
        line-height: 1.6;
      }

      main {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 2rem 2rem 2rem;
      }

      h1 {
        font-size: 2.5rem;
        font-weight: 700;
        line-height: 1.2;
        margin-bottom: 1rem;
        color: var(--gray-dark);
      }

      h2 {
        font-size: 1.875rem;
        font-weight: 600;
        margin-top: 2rem;
        margin-bottom: 1rem;
        color: var(--gray-dark);
      }

      h3 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-top: 1.5rem;
        margin-bottom: 0.75rem;
        color: var(--gray-dark);
      }

      /* Highlighting support */
      :global(mark) {
        background-color: #fef08a;
        padding: 0.125rem 0.25rem;
        border-radius: 0.25rem;
      }

      /* Keyboard key styling - Global because it's in slotted content */
      :global(kbd) {
        background-color: #f3f4f6;
        border: 1px solid #d1d5db;
        border-bottom-width: 3px;
        border-radius: 0.5rem;
        box-shadow: 0 2px 0 #e5e7eb;
        padding: 0.25rem 0.5rem;
        font-family: ui-monospace, monospace;
        font-size: 0.875em;
        font-weight: 600;
        color: #374151;
        display: inline-block;
        transition: all 0.1s ease-in-out;
        cursor: pointer;
        vertical-align: middle; /* Center with surrounding text */
        line-height: 1.5; /* Consistent height */
      }

      :global(kbd:hover) {
        transform: translateY(-2px);
        box-shadow: 0 4px 0 #e5e7eb;
      }

      :global(kbd:active) {
        transform: translateY(1px);
        box-shadow: 0 1px 0 #e5e7eb;
        /* Keep border-bottom-width consistent to prevent layout shift */
      }

      /* Links */
      :global(a) {
        color: var(--accent);
        text-decoration: none;
      }

      :global(a:hover) {
        color: var(--accent-dark);
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <SearchModal />
    <CodeBlockHandler />
    <MathBlockHandler />
    <MermaidBlockHandler />
    <DocumentClickHandler />

    <!-- Loading overlay for slow networks -->
    <div id="page-loading-overlay" class="page-loading-hidden">
      <div
        style="width: 40px; height: 40px; border: 4px solid #e0e0e0; border-top-color: #333; border-radius: 50%; animation: spin 0.8s linear infinite;"
      >
      </div>
      <div style="margin-top: 16px; color: #666; font-family: system-ui;">
        Loading...
      </div>
    </div>

    <script>
      // Show loading overlay if page transition takes too long (progressive fallback)
      let loadingTimer;
      const isInitialLoad = document.readyState !== "complete";

      // Handle initial page load (refresh)
      if (isInitialLoad) {
        const overlay = document.getElementById("page-loading-overlay");

        // Show overlay after 500ms if page still loading
        loadingTimer = setTimeout(() => {
          if (overlay && document.readyState !== "complete") {
            overlay.classList.remove("page-loading-hidden");
            overlay.classList.add("page-loading-visible");
          }
        }, 500);

        // Hide when page fully loaded
        window.addEventListener("load", () => {
          clearTimeout(loadingTimer);
          if (overlay && overlay.classList.contains("page-loading-visible")) {
            overlay.classList.remove("page-loading-visible");
            overlay.classList.add("page-loading-fadeout");
            setTimeout(() => {
              overlay.classList.remove("page-loading-fadeout");
              overlay.classList.add("page-loading-hidden");
            }, 200);
          }
        });
      }

      // Handle View Transitions (page navigation)
      document.addEventListener("astro:before-preparation", () => {
        const overlay = document.getElementById("page-loading-overlay");

        // Show overlay after 500ms (only on slow networks)
        loadingTimer = setTimeout(() => {
          if (overlay) {
            overlay.classList.remove("page-loading-hidden");
            overlay.classList.add("page-loading-visible");
          }
        }, 500);
      });

      document.addEventListener("astro:page-load", () => {
        clearTimeout(loadingTimer);
        const overlay = document.getElementById("page-loading-overlay");
        if (overlay && overlay.classList.contains("page-loading-visible")) {
          // Trigger fade out
          overlay.classList.remove("page-loading-visible");
          overlay.classList.add("page-loading-fadeout");

          // Hide after animation completes
          setTimeout(() => {
            overlay.classList.remove("page-loading-fadeout");
            overlay.classList.add("page-loading-hidden");
          }, 200);
        }
      });
    </script>

    <style>
      #page-loading-overlay {
        position: fixed;
        inset: 0;
        background: rgba(255, 255, 255, 0.95);
        z-index: 9999;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
      }

      .page-loading-hidden {
        opacity: 0;
        pointer-events: none;
      }

      .page-loading-visible {
        opacity: 1;
        animation: fadeIn 0.3s ease-out;
      }

      .page-loading-fadeout {
        opacity: 0;
        transition: opacity 0.2s ease-in;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }

      @keyframes spin {
        to {
          transform: rotate(360deg);
        }
      }
    </style>
  </body>
</html>

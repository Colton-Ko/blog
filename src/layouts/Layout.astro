---
interface Props {
  title: string;
}

const { title } = Astro.props;
import Header from "../components/Header.astro";
import SearchModal from "../components/SearchModal.astro";
import CodeBlockHandler from "../components/CodeBlockHandler.astro";
import MathBlockHandler from "../components/MathBlockHandler.astro";
import MermaidBlockHandler from "../components/MermaidBlockHandler.astro";
import DocumentClickHandler from "../components/DocumentClickHandler.astro";
import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Blog" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- KaTeX CSS for math rendering -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css"
      integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV"
      crossorigin="anonymous"
    />

    <!-- Custom CSS for sans-serif math (fallback) -->
    <style is:global>
      /* Force KaTeX to use sans-serif fonts (mimics LaTeX sansmath package) */
      .katex {
        font-family: "Computer Modern Sans", "Helvetica Neue", Helvetica, Arial,
          sans-serif !important;
      }

      /* Variables should be italic (mathnormal, mathit) */
      .katex .mathnormal,
      .katex .mathit {
        font-family: "Computer Modern Sans", "Helvetica Neue", Arial, sans-serif !important;
        font-style: italic !important;
      }

      /* Roman/upright text should be normal (mathrm) */
      .katex .mathrm {
        font-family: "Computer Modern Sans", "Helvetica Neue", Arial, sans-serif !important;
        font-style: normal !important;
      }
    </style>

    <!-- Highlight.js CSS for code syntax highlighting -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/highlight.js@11.9.0/styles/github.min.css"
    />

    <title>{title}</title>

    <ClientRouter />

    <style>
      :root {
        --accent: #2563eb;
        --accent-light: #3b82f6;
        --accent-dark: #1e40af;
        --gray: #6b7280;
        --gray-light: #f3f4f6;
        --gray-dark: #1f2937;
      }

      * {
        box-sizing: border-box;
      }

      html {
        font-family: system-ui, sans-serif;
        background: #ffffff;
        color: #1f2937;
      }

      body {
        margin: 0;
        padding: 0; /* Remove padding from body to allow full-width header */
        line-height: 1.6;
      }

      main {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 2rem 2rem 2rem;
      }

      h1 {
        font-size: 2.5rem;
        font-weight: 700;
        line-height: 1.2;
        margin-bottom: 1rem;
        color: var(--gray-dark);
      }

      h2 {
        font-size: 1.875rem;
        font-weight: 600;
        margin-top: 2rem;
        margin-bottom: 1rem;
        color: var(--gray-dark);
      }

      h3 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-top: 1.5rem;
        margin-bottom: 0.75rem;
        color: var(--gray-dark);
      }

      /* Highlighting support */
      :global(mark) {
        background-color: #fef08a;
        padding: 0.125rem 0.25rem;
        border-radius: 0.25rem;
      }

      /* Keyboard key styling - Global because it's in slotted content */
      :global(kbd) {
        background-color: #f3f4f6;
        border: 1px solid #d1d5db;
        border-bottom-width: 3px;
        border-radius: 0.5rem;
        box-shadow: 0 2px 0 #e5e7eb;
        padding: 0.25rem 0.5rem;
        font-family: ui-monospace, monospace;
        font-size: 0.875em;
        font-weight: 600;
        color: #374151;
        display: inline-block;
        transition: all 0.1s ease-in-out;
        cursor: pointer;
        vertical-align: middle; /* Center with surrounding text */
        line-height: 1.5; /* Consistent height */
      }

      :global(kbd:hover) {
        transform: translateY(-2px);
        box-shadow: 0 4px 0 #e5e7eb;
      }

      :global(kbd:active) {
        transform: translateY(1px);
        box-shadow: 0 1px 0 #e5e7eb;
        /* Keep border-bottom-width consistent to prevent layout shift */
      }

      /* Links */
      :global(a) {
        color: var(--accent);
        text-decoration: none;
      }

      :global(a:hover) {
        color: var(--accent-dark);
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <SearchModal />
    <CodeBlockHandler />
    <MathBlockHandler />
    <MermaidBlockHandler />
    <DocumentClickHandler />
  </body>
</html>

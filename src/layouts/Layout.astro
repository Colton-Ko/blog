---
interface Props {
  title: string;
}

const { title } = Astro.props;
import Header from "../components/Header.astro";
import SearchModal from "../components/SearchModal.astro";
import CodeBlockHandler from "../components/CodeBlockHandler.astro";
import MathBlockHandler from "../components/MathBlockHandler.astro";
import MermaidBlockHandler from "../components/MermaidBlockHandler.astro";
import DocumentClickHandler from "../components/DocumentClickHandler.astro";
import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Blog" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Resource hints for performance -->
    <link rel="preconnect" href="https://cdn.jsdelivr.net" />
    <link rel="preconnect" href="https://cdn.skypack.dev" />
    <link rel="preconnect" href="https://www.desmos.com" />

    <!-- Preload critical CSS -->
    <link
      rel="preload"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css"
      as="style"
      crossorigin="anonymous"
      integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV"
    />

    <!-- KaTeX CSS for math rendering -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css"
      integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV"
      crossorigin="anonymous"
    />

    <!-- Custom CSS for sans-serif math (fallback) -->
    <style is:global>
      /* Force KaTeX to use sans-serif fonts (mimics LaTeX sansmath package) */
      .katex {
        font-family: "Computer Modern Sans", "Helvetica Neue", Helvetica, Arial,
          sans-serif !important;
      }

      /* Optimize font loading - prevent flash of invisible text */
      @font-face {
        font-display: swap;
      }

      /* Performance: Skip rendering off-screen content */
      /* Only apply to non-interactive collapsed state */
      .katex-display:not(.math-block-wrapper .katex-display),
      .mermaid-container,
      .desmos-container {
        content-visibility: auto;
        contain-intrinsic-size: 1px 300px; /* Estimate height to prevent scrollbar jumping */
      }

      /* Variables should be italic (mathnormal, mathit) */
      .katex .mathnormal,
      .katex .mathit {
        font-family: "Computer Modern Sans", "Helvetica Neue", Arial, sans-serif !important;
        font-style: italic !important;
      }

      /* Roman/upright text should be normal (mathrm) */
      .katex .mathrm {
        font-family: "Computer Modern Sans", "Helvetica Neue", Arial, sans-serif !important;
        font-style: normal !important;
      }
    </style>

    <!-- Highlight.js CSS for code syntax highlighting -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/highlight.js@11.9.0/styles/github.min.css"
    />

    <title>{title}</title>

    <ClientRouter />

    <style>
      :root {
        /* Color System */
        --color-accent: #2563eb;
        --color-accent-light: #3b82f6;
        --color-accent-dark: #1e40af;

        --color-gray-50: #f9fafb;
        --color-gray-75: #f5f5f5;
        --color-gray-100: #f3f4f6;
        --color-gray-200: #e5e7eb;
        --color-gray-300: #d1d5db;
        --color-gray-400: #9ca3af;
        --color-gray-500: #6b7280;
        --color-gray-600: #4b5563;
        --color-gray-700: #374151;
        --color-gray-800: #1f2937;
        --color-gray-900: #111827;

        --color-blue-50: #eff6ff;
        --color-blue-200: #bfdbfe;

        --color-text-primary: #1f2937;
        --color-text-secondary: #6b7280;
        --color-text-dark: #1a1a1a;
        --color-text-muted: #666666;

        --color-bg-white: #ffffff;
        --color-bg-overlay: rgba(255, 255, 255, 0.95);
        --color-bg-card: rgba(255, 255, 255, 0.5);
        --color-bg-hover: rgba(255, 255, 255, 0.8);
        --color-dim-hover: rgba(0, 0, 0, 0.03);

        --color-highlight: #fef08a;
        --color-success: #10b981;
        --color-error: #ef4444;

        --color-border-light: rgba(0, 0, 0, 0.05);
        --color-border-medium: rgba(0, 0, 0, 0.1);

        /* Legacy aliases for backward compatibility */
        --accent: var(--color-accent);
        --accent-light: var(--color-accent-light);
        --accent-dark: var(--color-accent-dark);
        --gray: var(--color-gray-500);
        --gray-light: var(--color-gray-100);
        --gray-dark: var(--color-gray-800);

        /* Spacing System */
        --spacing-xs: 0.25rem;
        --spacing-sm: 0.5rem;
        --spacing-md-sm: 0.75rem;
        --spacing-md: 1rem;
        --spacing-lg: 1.5rem;
        --spacing-xl: 2rem;

        /* Border Radius */
        --radius-sm: 0.25rem;
        --radius-md: 0.375rem;
        --radius-lg: 0.5rem;
        --radius-xl: 0.75rem;
        --radius-2xl: 1rem;

        /* Transitions */
        --transition-fast: 0.15s;
        --transition-base: 0.2s;
        --transition-slow: 0.3s;

        /* Z-index layers */
        --z-overlay: 9999;
        --z-modal: 10;
      }

      * {
        box-sizing: border-box;
      }

      html {
        font-family: system-ui, sans-serif;
        background: var(--color-bg-white);
        color: var(--color-text-primary);
        scrollbar-width: none; /* Firefox */
        -ms-overflow-style: none; /* IE and Edge */
      }

      html::-webkit-scrollbar {
        display: none; /* Chrome, Safari, Opera */
      }

      body {
        margin: 0;
        padding: 0;
        line-height: 1.6;
      }

      main {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 var(--spacing-xl) var(--spacing-xl) var(--spacing-xl);
      }

      h1 {
        font-size: 2.5rem;
        font-weight: 700;
        line-height: 1.2;
        margin-bottom: var(--spacing-md);
        color: var(--color-gray-800);
      }

      h2 {
        font-size: 1.875rem;
        font-weight: 600;
        margin-top: var(--spacing-xl);
        margin-bottom: var(--spacing-md);
        color: var(--color-gray-800);
      }

      h3 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-top: var(--spacing-lg);
        margin-bottom: 0.75rem;
        color: var(--color-gray-800);
      }

      /* Highlighting support */
      :global(mark) {
        background-color: var(--color-highlight);
        padding: 0.125rem var(--spacing-xs);
        border-radius: var(--radius-sm);
      }

      /* Keyboard key styling */
      :global(kbd) {
        background-color: var(--color-gray-100);
        border: 1px solid var(--color-gray-300);
        border-bottom-width: 3px;
        border-radius: var(--radius-lg);
        box-shadow: 0 2px 0 var(--color-gray-200);
        padding: var(--spacing-xs) var(--spacing-sm);
        font-family: ui-monospace, monospace;
        font-size: 0.875em;
        font-weight: 600;
        color: var(--color-gray-700);
        display: inline-block;
        transition: all 0.1s ease-in-out;
        cursor: pointer;
        vertical-align: middle;
        line-height: 1.5;
      }

      :global(kbd:hover) {
        transform: translateY(-2px);
        box-shadow: 0 4px 0 var(--color-gray-200);
      }

      :global(kbd:active) {
        transform: translateY(1px);
        box-shadow: 0 1px 0 var(--color-gray-200);
      }

      /* Links */
      :global(a) {
        color: var(--color-accent);
        text-decoration: none;
      }

      :global(a:hover) {
        color: var(--color-accent-dark);
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <SearchModal />
    <CodeBlockHandler />
    <MathBlockHandler />
    <MermaidBlockHandler />
    <DocumentClickHandler />

    <!-- Loading overlay for slow networks -->
    <div id="page-loading-overlay" class="page-loading-hidden">
      <div class="loading-spinner"></div>
      <div class="loading-text">Loading...</div>
    </div>

    <script>
      const LOADING_DELAY_MS = 500;
      const FADEOUT_DURATION_MS = 200;

      interface LoadingOverlay {
        show(): void;
        hide(): void;
      }

      function createLoadingOverlay(): LoadingOverlay {
        const overlay = document.getElementById("page-loading-overlay");
        let loadingTimer: NodeJS.Timeout | null = null;

        return {
          show(): void {
            if (!overlay) return;

            loadingTimer = setTimeout(() => {
              if (document.readyState !== "complete") {
                overlay.classList.remove("page-loading-hidden");
                overlay.classList.add("page-loading-visible");
              }
            }, LOADING_DELAY_MS);
          },

          hide(): void {
            if (loadingTimer) {
              clearTimeout(loadingTimer);
              loadingTimer = null;
            }

            if (overlay?.classList.contains("page-loading-visible")) {
              overlay.classList.remove("page-loading-visible");
              overlay.classList.add("page-loading-fadeout");

              setTimeout(() => {
                overlay.classList.remove("page-loading-fadeout");
                overlay.classList.add("page-loading-hidden");
              }, FADEOUT_DURATION_MS);
            }
          },
        };
      }

      // Initialize loading overlay
      const loadingOverlay = createLoadingOverlay();
      const isInitialLoad = document.readyState !== "complete";

      // Handle initial page load (refresh)
      if (isInitialLoad) {
        loadingOverlay.show();
        window.addEventListener("load", () => loadingOverlay.hide());
      }

      // Handle View Transitions (page navigation)
      document.addEventListener("astro:before-preparation", () =>
        loadingOverlay.show(),
      );

      document.addEventListener("astro:page-load", () => loadingOverlay.hide());
    </script>

    <style>
      /* Loading Overlay */
      #page-loading-overlay {
        position: fixed;
        inset: 0;
        background: var(--color-bg-overlay);
        z-index: var(--z-overlay);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
      }

      .page-loading-hidden {
        opacity: 0;
        pointer-events: none;
      }

      .page-loading-visible {
        opacity: 1;
        animation: fadeIn var(--transition-slow) ease-out;
      }

      .page-loading-fadeout {
        opacity: 0;
        transition: opacity var(--transition-base) ease-in;
      }

      .loading-spinner {
        width: 40px;
        height: 40px;
        border: 4px solid var(--color-gray-200);
        border-top-color: var(--color-gray-700);
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
      }

      .loading-text {
        margin-top: var(--spacing-md);
        color: var(--color-text-muted);
        font-family: system-ui, sans-serif;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }

      @keyframes spin {
        to {
          transform: rotate(360deg);
        }
      }
    </style>
  </body>
</html>
